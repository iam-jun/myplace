<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:paddingLeft="24dp"
        android:paddingRight="24dp"
        android:paddingBottom="24dp"
        android:paddingTop="24dp">

    <ListView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/filterView">

    </ListView>
    <LinearLayout android:layout_width="wrap_content"
                  android:layout_height="36dp"
                  android:orientation="horizontal" android:layout_gravity="right">
        <Button android:layout_width="match_parent" android:layout_height="match_parent" android:id="@+id/btnCancel" android:text="CANCEL"/>
        <Button android:layout_width="match_parent" android:layout_height="match_parent" android:id="@+id/btnApply"  android:text="APPLY"/>
    </LinearLayout>
</LinearLayout>
